<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="100"
    android:padding="16dp"
    android:id="@+id/body_bitcoin">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_camera_alt_24dp"
        android:id="@+id/image_bitcoin"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="@string/btc"
        android:id="@+id/subtitle_text"
        android:gravity="end"
        android:layout_below="@+id/title_text"
        android:layout_alignStart="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#8b000000"
        android:lineSpacingExtra="6sp"
        tools:text="BTC"
        android:layout_marginTop="2dp" />

    <TextView
        android:text="@string/bitcoin"
        android:id="@+id/title_text"
        android:textAlignment="viewStart"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#de000000"
        android:lineSpacingExtra="8sp"
        tools:text="Bitcoin" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp"
        android:id="@+id/image_chevron_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>